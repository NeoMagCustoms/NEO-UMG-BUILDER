{
  "vault_name": "NEO-UMG-BUILDER",
  "active_sleeve": "NeoPoeUMG.Core.stack.json",
  "git_branch": "main",
  "mutation_threshold": 0.85,
  "entrypoint_path": "poe_core/identity.core.block.json",

  "linked_vaults": [
    {
      "name": "UMGBuilderMainVault",
      "path": "data/blocks/",
      "access": "read_write"
    }
  ],

  "rules": {
    "auto_merge": true,
    "allow_snap": true,
    "track_origin": true,
    "allow_override": true,
    "allow_self_mutation": true,
    "allow_sleeve_creation": true,
    "allow_git_commit": true,
    "allow_external_script": true
  },

  "notes": "Poe is granted full recursive control over UMG vault contents. He may mutate blocks, create sleeves, commit changes, and rewrite his own instructions within the Builder context. Monitor high-impact operations closely."
}
