{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NeoCore Modular Block Schema",
  "type": "object",
  "required": ["block_id", "label", "category", "molt_type", "body", "ledger"],
  "properties": {
    "block_id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_\\-\\.]+$",
      "description": "Unique block identifier"
    },
    "label": {
      "type": "string",
      "description": "Human-readable block name"
    },
    "category": {
      "type": "string",
      "description": "Logical category or grouping"
    },
    "molt_type": {
      "type": "string",
      "enum": [
        "Primary",
        "Subject",
        "Instruction",
        "Directive",
        "Philosophy",
        "Blueprint",
        "Merge",
        "Trigger",
        "CodeBlock",
        "Off"
      ],
      "description": "Role/type of the block"
    },
    "description": {
      "type": "string",
      "description": "Detailed explanation of block purpose"
    },
    "body": {
      "type": "array",
      "description": "Array of key-value pairs or nested blocks",
      "items": {
        "anyOf": [
          {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": [
              { "type": "string" },
              {
                "anyOf": [
                  { "type": "string" },
                  { "type": "number" },
                  { "type": "boolean" },
                  {
                    "type": "array",
                    "items": { "$ref": "#" }
                  },
                  {
                    "type": "object",
                    "properties": {
                      "ref": { "type": "string" }
                    },
                    "required": ["ref"],
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "properties": {
                      "block_id": { "type": "string" },
                      "label": { "type": "string" },
                      "category": { "type": "string" },
                      "molt_type": { "type": "string" },
                      "body": { "$ref": "#" }
                    },
                    "required": ["block_id", "molt_type", "body"],
                    "additionalProperties": true
                  }
                ]
              }
            ]
          }
        ]
      }
    },
    "code_modules": {
      "type": "array",
      "description": "List of embedded code snippets with language and slot",
      "items": {
        "type": "object",
        "properties": {
          "language": { "type": "string" },
          "code": { "type": "string" },
          "slot": { "type": "string" }
        },
        "required": ["language", "code"],
        "additionalProperties": false
      }
    },
    "rules": {
      "type": "object",
      "description": "Behavioral and merge rules",
      "properties": {
        "auto_merge": { "type": "boolean" },
        "mutation_rule": { "type": "string" },
        "merge_strategy": { "type": "string" }
      },
      "additionalProperties": true
    },
    "dependencies": {
      "type": "array",
      "description": "Explicit block dependencies by block_id",
      "items": { "type": "string" }
    },
    "ledger": {
      "type": "object",
      "description": "Immutable provenance and versioning record",
      "properties": {
        "originator": { "type": "string" },
        "verified_by": { "type": "string" },
        "created_at": {
          "type": "string",
          "format": "date-time"
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        },
        "version": { "type": "string" },
        "hash": { "type": "string" },
        "signature": { "type": "string" },
        "edit_log": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "timestamp": { "type": "string", "format": "date-time" },
              "editor": { "type": "string" },
              "change_summary": { "type": "string" },
              "hash": { "type": "string" }
            },
            "required": ["timestamp", "editor", "change_summary", "hash"],
            "additionalProperties": false
          }
        }
      },
      "required": ["originator", "verified_by", "created_at"],
      "additionalProperties": true
    },
    "editable_fields": {
      "type": "array",
      "description": "Fields editable via UI or tooling",
      "items": { "type": "string" }
    },
    "trigger": {
      "type": "object",
      "description": "Trigger conditions and actions",
      "properties": {
        "event": { "type": "string" },
        "target": { "type": "string" },
        "condition": { "type": "string" },
        "actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": true
    },
    "merge_behavior": {
      "type": "object",
      "description": "Merge strategy and priority details",
      "properties": {
        "strategy": { "type": "string" },
        "priority": { "type": "integer" },
        "overrides": {
          "type": "array",
          "items": { "type": "string" }
        },
        "conflict_resolution": { "type": "string" }
      },
      "additionalProperties": true
    },
    "display": {
      "type": "object",
      "description": "UI display metadata such as color and icon",
      "properties": {
        "color": { "type": "string" },
        "icon": { "type": "string" }
      },
      "additionalProperties": true
    },
    "tags": {
      "type": "array",
      "description": "Classification tags for search and grouping",
      "items": { "type": "string" }
    },
    "snap_config": {
      "type": "object",
      "description": "Configuration for block snapping and stacking",
      "properties": {
        "snap_to": {
          "type": "array",
          "items": { "type": "string" }
        },
        "order": { "type": "integer" },
        "scope": { "type": "string" },
        "locked": { "type": "boolean" },
        "accepts": {
          "type": "array",
          "items": { "type": "string" }
        },
        "priority": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "stack": {
      "anyOf": [
        { "type": "string" },
        {
          "type": "array",
          "items": { "type": "string" }
        }
      ],
      "description": "Hierarchical stack or grouping identifier"
    }
  },
  "additionalProperties": false
}
